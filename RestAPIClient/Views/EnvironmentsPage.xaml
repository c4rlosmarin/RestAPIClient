<Page
    x:Class="RestAPIClient.Views.EnvironmentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid Margin="35,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Environments" Style="{ThemeResource TitleTextBlockStyle}"/>

        <StackPanel Grid.Row="2" Margin="{StaticResource XSmallTopMargin}">
            <TextBlock Text="Coming soon..." Style="{ThemeResource BodyTextBlockStyle}" />
        </StackPanel>
    </Grid>
</Page>
